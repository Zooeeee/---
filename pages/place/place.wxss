/* pages/today/today.wxss */
page{
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.top{
    width: 100%;
    border: 1px solid #000000;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content:space-between;
    align-items:center;
   
}
.top view{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items:center;
}
.top label{
    color: #2ab4ff;
    font-size: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items:center;
}

.weatherIcon{
    height:80rpx;
    width: 80rpx;
}

.GPSIcon{
    height:45rpx;
    width: 45rpx;
}

.description{
    display: flex;
    flex-direction: column;  
    justify-content:center;
    align-items:center;
}

.selectData{
    display: flex;
    flex-direction: row;
}

.body{
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.content {
    padding: 20px;
    background-color: #fff;
  }

  .click{
      height: 30rpx;
      width:30rpx;
  }