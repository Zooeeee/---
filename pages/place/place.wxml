<!-- pages/today/today.wxml -->
<view class="top">
  <label class="nav defaultCity">
    <navigator url="../selectCity/selectCity">
      <image class="GPSIcon" src="{{iconSrc}}"></image>
      <text>{{defaultCity}}</text>
    </navigator>
  </label>
</view>
<view class="weather">
  <view>data:{{date}}</view>
  <view>temperature:{{temperature}}</view>
  <view>weather:{{weather}}</view>
</view>
<view class="selectData">
  <view></view>
  <picker bindchange="pickDayCount" value="{{dayCountIndex}}" range="{{dayCount}}">
    <view class="picker">
      <button size="mini">{{dayCount[dayCountIndex]}}</button>
    </view>
  </picker>
  <view></view>
</view>
<view class="buttom">
  <view class="buttom-title">{{title}}</view>
  <scroll-view class="" scroll-y="true" style="height: 600rpx">
    <block wx:for="{{plan}}" wx:for-index="index" wx:key="this">
      <view bindtap="routeHelp" id="{{index}}" class="plan">
        第{{index+1}}天:{{item.description}}
      </view>
    </block>
  </scroll-view>
</view>