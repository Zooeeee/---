<!-- pages/today/today.wxml -->
<view class="top">
  <view>{{weather}}</view>
  <label class="nav defaultCity">
    <navigator url="../selectCity/selectCity">
      <image class="GPSIcon" src="{{iconSrc}}"></image>
      <text>{{defaultCity}}</text>
    </navigator>
  </label>
  <view>{{temperature}}</view>
</view>
<view class="description">
  <view>{{date}}</view>
  <view bindtap="clickAbstract">{{abstract}}</view>
</view>
<view class="body">
  <van-tabs bind:click="tabsOnClick" swipeable>
    <view class="body-title">{{title}}</view>
    <van-tab wx:for="{{dayCount}}" wx:key="index" title="{{dayCount[index]}}">
      <view class="content">
        <van-collapse value="{{ active2 }}" data-key="active2" accordion bind:change="onChange">
          <block wx:for="{{plan}}" wx:for-index="index" wx:key="this">
            <van-collapse-item title="第{{index+1}}天">
              <view bindtap="routeHelp" id="{{index}}">
                <text decode="{{true}}">&nbsp;&nbsp;&nbsp;&nbsp;</text>
                {{item.description}}
                <image class="click" src="../../img/place/click.png" />
              </view>
            </van-collapse-item>
          </block>
        </van-collapse>
      </view>
    </van-tab>
  </van-tabs>
</view>