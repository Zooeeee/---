<view class="top">
    <open-data class="avatar" type="userAvatarUrl"></open-data>
    <open-data type="userNickName"></open-data>
</view>
<view class="edit">
    <button wx:if="{{!editFlag}}" bindtap="clickEdit">编辑</button>
    <button wx:if="{{editFlag}}" bindtap="clickSave">保存</button>
</view>
<view>
    <block wx:for="{{places}}" wx:for-index="index" wx:key="this">
        <view class="onePlace">
            <view class="{{isDelete[index]?'delete':''}}">{{index+1}}:{{item}}</view>
            <icon class="icon" wx:if="{{!editFlag}}" bindtap="search" id="{{item}}" type="search"></icon>
            <icon class="icon" wx:if="{{editFlag}}" bindtap="delete" id="{{item}}" type="cancel"></icon>
        </view>
    </block>
</view>