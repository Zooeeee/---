/* pages/user/user.wxss */
page{
    text-align: center;
    padding: 0;
    background-color: #f7eded;
    display:flex;
    justify-content: center;
    align-items: center;
 }

 @keyframes sport
{
0%   {left:0px;}
100% {left:50rpx;}
}
.container{
    width: 100%;
    display:flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.top{
    height: 300rpx;
    width: 100%;
    text-align:center;
    display:flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
 }

 

.avatar{
     height: 150rpx;
     width:150rpx;
     border-radius:50%;
     overflow:hidden;
 }

.edit{
    width: 90%;
    display:flex;
    justify-content:space-between;
    align-items:right;
}


.edit image{
    width: 60rpx;
    height: 60rpx;
}
.edit button{
    width: 110rpx;
    height: 70rpx;
    border-radius: 10rpx;
}

.body{
    display: flex;
    flex-direction: row;
    align-items:center;
    flex-direction: column;
    justify-content: flex-start;
    width: 90%;
}

.onePlace{
    width: 100%;
     display: flex;
     flex-direction: row;
     justify-content: space-between;
     align-items:center;
     border-bottom:1px dashed #000;    
     height: 100rpx;
}


 
.onePlace icon{
    margin-right: 50rpx;
    animation: sport 1.5s;
    position:relative;
    animation-fill-mode :forwards;
  
 }

.delete{
    text-decoration:line-through;
}

/* 滑动单元 */
.demo-swipe-cell {
    user-select: none;
  }
  
  .van-swipe-cell__left,
  .van-swipe-cell__right {
    display: inline-block;
    width: 65px;
    height: 44px;
    font-size: 15px;
    line-height: 44px;
    color: #fff;
    text-align: center;
    background-color: #f44;
  }
  
  .swipe-cell{
      width: 100%;
  }