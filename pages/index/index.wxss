/* pages/index/index.wxss */
@keyframes fade-in {  
    0% {opacity: 0;}/*初始状态 透明度为0*/  
    20% {opacity: 0.2;} 
    40% {opacity: 0.4;}
    60% {opacity: 0.6;}
    80% {opacity: 0.8;}
    100% {opacity: 1;}/*结束状态 透明度为1*/  
    
}  
page {
    height: 100%;
    float: left;
    width: 100%;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    background-image: url('https://upload-images.jianshu.io/upload_images/11628766-ccb1d80a87ccbbd4.jpg?imageMogr2/auto-orient/strip%7CimageView2/2/w/1240'); 
}


.body{
    display:flex;
    justify-content: center;
    align-items: center;
}


.btn{ 
    margin-top: 60%;
    border-radius: 25rpx;
    width: 150px; /* 宽度 */
    height: 60px; /* 高度 */
    line-height: 110rpx;
    outline: none; /* 不显示轮廓线 */
    font-size: 19px; /* 字体大小 */
    font-family: Microsoft YaHei; /* 设置字体 */
    background-color: rgba(255,255,255,0.3);

    animation: fade-in;/*动画名称*/  
    animation-duration:1.5s;/*动画持续时间*/   
}


.btn p {
    position: relative;
}

