page{
    margin: 20rpx 20rpx 20rpx 20rpx;
}
.top{
    border: 1px solid #000000;
    text-align:center
}
.defaultCity{
    font-size: 50rpx;
    font-family:"楷体";
    height:60rpx;
    border: 1px solid #000000;
}

.search{
    display: flex;
    flex-direction: row;
    align-items:center;
    border: 1px solid #000000;
    border-radius: 5px;
  
}
.search input{
    width: 87%;
    text-align: left;
   
}
.search button{
    width: 13%;
  
}

.select{
    display: flex;
    flex-wrap:wrap;
    border: 1px solid #000000;
}
.input{
    border: 1px solid #000000;
}
.option{
    width: 100%;
	display: flex;
	flex-direction: row;
/* 	justify-content: space-around; */
    margin:20rpx;
    flex-wrap: wrap;
}
.oneOption{
    display: flex;
    flex-direction: column; 
    width:180rpx;
    height: 180rpx;
    align-items: center;
}
.oneOption p{
    font-size: 30rpx;
}
.body{
    display: flex;
    flex-direction: column;
    align-items: left;
}
.oneResult{
    background-color: rgb(214, 195, 195);
    border-radius: 10rpx;
    border: #000000 1px solid;
    width: 100%;
    font-family:"楷体";
}