<view class="container">
    <view class="data" style="margin-top:30rpx;">
        <block wx:for="{{dates}}" wx:for-index="index" wx:key="this">
            <view class="block">
                <view>{{item.weekday}}</view>
                <view>{{item.day}}</view>
            </view>
        </block>
    </view>
    <view class="data" style="margin-top:30rpx;">
        <block wx:for="{{totalWeatherData}}" wx:for-index="index" wx:key="this">
            <view class="block">{{item.max}}</view>
        </block>
    </view>
    <view class="img"></view>
    <view class="data">
        <block wx:for="{{totalWeatherData}}" wx:for-index="index" wx:key="this">
            <view class="block">
                <view>{{item.min}}</view>
                <view class="height">{{item.weather}}</view>
                <view>{{item.wind}}</view>
            </view>
        </block>
    </view>
    <view class="data" style="margin-top:60rpx;" >
         <block wx:for="{{totalHelpData}}" wx:for-index="index" wx:key="this">
            <view class="block">
                <view class="height">
                    <image class="icon"  src="../../img/prediction/{{item.title}}.png"/>
                </view>
                 <view id="{{index}}" class="height" bindtap = "clickHelp"  > {{item.zs}}</view>
            </view>
        </block>
    </view>
</view>