/*右边的选择首字母的滑动列表*/
.searchLetter {
  position: fixed;
  right: 0;
  width: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
}
.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 46rpx;
}
/*在该列表下的view都与上方有一定距离*/
.searchLetter view {
  margin-top: 20rpx;
}
/*右边导航栏上方的“当前” “热门”文本样式*/
.thishotText {
  color: #2ab4ff;
  font-size: 22rpx;
  margin: 0 !important;  /*设置权重*/
}

/*选择右边的导航列表时回弹出一个黑色的首字母提醒框*/
.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

/*拥有相同首字母的地区合集*/
.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}
/*拥有相同首字母的地区合集的 字母 样式*/
.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 40rpx;
  padding-left: 34rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}
/*每一个具体的城市的样式*/
.item_city {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 34rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}
/*当前选择城市的文本样式*/
.hotcity-common {
  font-size: 24rpx;
  color: #666;
  padding: 0 0 0 30rpx;
}
/*当前选择城市的文本样式*/
.thisCity {
  padding-top: 30rpx;
}
/*当前选择的城市的CSS*/
.thisCityName {
  display: inline-block;
  border: 1rpx solid #2ab4ff;
  border-radius: 8rpx;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #2ab4ff;
  text-align: center;
  min-width: 149.5rpx;
  margin: 20rpx 0 20rpx 30rpx;
}


.slectCity {
  border-color: #2ab4ff !important;
}

.slectCity view {
  color: #2ab4ff !important;
}
/*热门城市选择列表中的城市块*/
.weui-grid {
  position: relative;
  float: left;
  padding: 10rpx 0;
  width: 149.5rpx;
  box-sizing: border-box;
  border: 1rpx solid #ececec;
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
}
/*热门城市选择列表中的城市文本*/
.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
